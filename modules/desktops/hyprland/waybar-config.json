// modules/desktops/hyprland/waybar-config.json
// ---
{
  "layer": "top",
  "position": "top",
  "height": 32,
  "spacing": 8,

  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["clock"],
  "modules-right": [
    "tray",
    "network",
    "bluetooth",
    "cpu",
    "memory",
    "battery",
    "pulseaudio"
  ],

  "hyprland/workspaces": {
    "disable-scroll": false,
    "all-outputs": true,
    "format": "{name}"
  },

  "clock": {
    "format": "{:%a %d/%m %H:%M}"
  },

  "network": {
    "format-wifi": " {essid} ({signalStrength}%)",
    "format-ethernet": "󰈀 {ipaddr}",
    "format-disconnected": "󰖪 offline",
    "tooltip": true
  },

  "bluetooth": {
    "format": " {status}",
    "format-disabled": " off",
    "format-connected": " {num_connections}",
    "tooltip": true
  },

  "cpu": {
    "format": " {usage}%"
  },

  "memory": {
    "format": " {used:0.1f}G"
  },

  "battery": {
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "states": { "warning": 25, "critical": 12 },
    "format-icons": ["","","","",""]
  },

  "pulseaudio": {
    "format": " {volume}%",
    "format-muted": "󰖁 muted",
    "scroll-step": 5
  }
}
